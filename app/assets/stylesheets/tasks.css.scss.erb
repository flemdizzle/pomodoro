/* This is style for the task list only */
#timer-tasks {
}

#task-list {
  background-color: #323233;
  color: #ffffff;
  font-family: "Helvetica", sans-serif;
  width: 1200px;
  min-height: 300px;
  /* There is no max-height so that users can list as many items as they want */
  margin: 0 auto;
  padding: 30px;
}

#input-bar {
  color: #000000;
  font-family: "Helvetica", sans-serif;
  font-size: 22px;
  padding: 10px;
}

p {
  font-family: "Helvetica", sans-serif;
}

ul {
  font-family: "Helvetica", sans-serif;
  font-size: 22px;
  margin: 0;
  padding: 0;
}

li {
  margin: 10px 0;
}

ul li {
  display: inline;
}

.testing {
word-wrap: normal;
min-width: 33%;
max-width: 33%;
display: inline-block;
}

<div id='timer-tasks'>

  <%= render "timer" %>
  <div ng-controller="TaskListCtrl">
      <p>Total number of tasks: {{tasks.length}}</p>
    <form name="taskForm" ng-submit="save()">
        <input type="text" ng-model="task.task"  size="30"
               placeholder="add new task then press Enter" type="submit">
      <!-- <br>{{task.task}} -->
    </form>
    <ul>
     <div ng-show="task.task.length > 0">
           <li type="none">
             <input type="checkbox">
             <span>{{task.task}}</span>
             <button ng-click="deleteTask(task.id)">&times;</button>
           </li>
           </div>
      <li ng-hide="hide" ng-repeat="task in tasks | orderBy : reverse" type="none">
        <!-- This ng-click updates checked status -->
        <input type="checkbox" ng-model="task.complete" ng-click="update(task.id, task)">
        <span class="done-{{task.complete}}">{{task.task}}</span>
        <button ng-click="deleteTask(task.id); hide=true">&times;</button>
      </li>
    </ul>
  </div>
</div>
<%= render "modal" %>
</div>
